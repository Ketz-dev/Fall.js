{
    "mount": {
        "public": { "url": "/", "static": true },
        "src": { "url": "/dist" }
    },
    "plugins": [
        ["@snowpack/plugin-typescript"]
    ],
    "optimize": {
        "bundle": true,
        "minify": true,
        "sourcemap": true
    },
    "alias": {
        "@Core": "./src/Core",
        "@Physics": "./src/Physics",
        "@FMath": "./src/FMath",
        "@Display": "./src/Display",
        "@Geometry": "./src/Geometry",
        "@Input": "./src/Input"
    }
}
{
    "compilerOptions": {
        "lib": ["DOM"],
        "target": "ESNext",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "outDir": "./dist",
        "strict": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "noImplicitOverride": true,
        "noImplicitReturns": true
    },
    "include": ["./src/**/*"]
}